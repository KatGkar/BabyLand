<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nextParent">

    <CalendarView
        android:id="@+id/calendarView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayoutParentTwo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:id="@+id/surnameParentTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameParentTwo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="95dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="106dp"
            android:ems="10"
            android:hint="Surname"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/bloodTypeParentTwo"
            android:layout_width="357dp"
            android:layout_height="29dp"
            android:layout_below="@+id/birthDateParentTwo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="18dp"
            android:popupBackground="@color/white"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/nameParentTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileUser2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="95dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="107dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/profileUser2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="162dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="177dp"
            android:text="Parent 2 "
            android:textSize="18sp" />

        <Button
            android:id="@+id/createChildButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bloodTypeParentTwo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="144dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="179dp"
            android:onClick="next"
            android:text="Next" />

        <EditText
            android:id="@+id/emailParetntTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/amkaParentTwo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="97dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="105dp"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/amkaParentTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/surnameParentTwo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="98dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="104dp"
            android:ems="10"
            android:hint="Amka"
            android:inputType="phone" />

        <EditText
            android:id="@+id/phoneNumberParentTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailParetntTwo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="101dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="100dp"
            android:ems="10"
            android:hint="Phone Number "
            android:inputType="phone" />

        <EditText
            android:id="@+id/birthDateParentTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneNumberParentTwo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="101dp"
            android:ems="10"
            android:inputType="date"
            android:textColor="#000000" />

        <Button
            android:id="@+id/calendarButtonOnParentTwo"
            android:layout_width="48dp"
            android:layout_height="39dp"
            android:layout_alignStart="@+id/birthDateParentTwo"
            android:layout_alignTop="@+id/birthDateParentTwo"
            android:layout_alignEnd="@+id/birthDateParentTwo"
            android:layout_marginStart="161dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="2dp"
            android:text="Button" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>